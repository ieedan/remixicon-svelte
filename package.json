{
	"name": "remixicon-svelte-monorepo",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"packageManager": "pnpm@10.20.0",
	"scripts": {
		"dev": "pnpm -r --parallel dev",
		"build": "pnpm -r build",
		"build:packages": "pnpm -parallel --filter './packages/*' build",
		"check": "pnpm -r check",
		"test": "pnpm -r test",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"ci:release": "pnpm build:packages && changeset publish",
		"postinstall": "pnpm build:packages",
		"check-icon-updates": "tsx scripts/check-icon-updates.ts",
		"process-icon-updates": "tsx scripts/process-icon-updates.ts"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@eslint/compat": "^2.0.1",
		"@eslint/js": "^9.39.2",
		"@svitejs/changesets-changelog-github-compact": "^1.2.0",
		"@types/node": "^22.19.7",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.1.0",
		"picocolors": "^1.1.1",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"typescript-eslint": "^8.53.1"
	}
}
